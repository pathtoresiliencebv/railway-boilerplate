{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd storefront && ./install-deps.sh && yarn build"
  },
  "deploy": {
    "startCommand": "cd storefront && yarn start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}