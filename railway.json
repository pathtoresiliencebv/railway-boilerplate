{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd storefront && npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "cd storefront && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}